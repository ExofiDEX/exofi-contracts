{
	"env": {
		"browser": false,
		"es2021": true,
		"mocha": true,
		"node": true
	},
	"plugins": [
		"@typescript-eslint"
	],
	"extends": [
		"eslint:recommended",
		"plugin:@typescript-eslint/recommended"
	],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": "latest"
	},
	"rules": {
		"@typescript-eslint/indent": ["error", "tab"],
		"brace-style": ["error","allman"],
		"indent": ["error","tab"],
		"linebreak-style": [
			"error",
			"unix"
		],
		"no-tabs": [
			"error",
			{
				"allowIndentationTabs": true
			}
		],
		"quotes": [
			"error",
			"double"
		],
		"semi": [
			"error",
			"always"
		],
		"space-before-function-paren": [
			"error",
			{
				"anonymous": "always",
				"named": "never",
				"asyncArrow": "always"
			}
		]
	}
}
